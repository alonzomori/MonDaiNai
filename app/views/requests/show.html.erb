<div class="container" id="request_show">
  <%= render "shared/navbar-back-menu" %>
  <div>
    <h1><%= @request.user.name %></h1>
    <%= turbo_stream_from @request %>
    <div id="messages">
      <% @request.messages.each do |message| %>
        <%= render "messages/message", {message: message} %>
      <% end %>
    </div>
    <%# TOGGLE BUTTON %>
    <div class="form-check form-switch" data-controller="toggle">
      <label class="form-check-label" for="checkNativeSwitch" data-toggle-target="label">
        Hold Item
      </label>
      <input class="form-check-input" type="checkbox" value="" id="checkNativeSwitch" switch data-action="change->toggle#changeText">
      <div id="request_form">
        <%# CONFIRM BUTTON %>
        <%= simple_form_for(@request) do |f| %>
          <%= f.input :pickup_date, as: :date, html5: true %>
          <%= f.submit "Confirm", class: "btn btn-danger rounded-pill" %>
        <% end %>
      </div>
      <%# TEXT INPUT AND SEND BUTTON %>
      <div class="my-3 w-100">
        <%= simple_form_for [@request, @message], html: { class: "d-flex align-items-center w-100" } do |f| %>
          <%= f.text_field :content,
        class: "form-control me-2 rounded-3 border-primary bg-white flex-grow-2",
        placeholder: "Enter your message"
    %>
          <%= f.submit "Send", class: "btn btn-primary rounded-3 text-white" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
