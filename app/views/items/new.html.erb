<div class="container" >
  <%# Navbar %>
  <div class="d-flex justify-content-between align-items-end my-5 mx-3">
    <%= link_to "Back", items_path, class: "navbar-link" %>
    <a href="" class="text-primary link-underline-secondary">
      <h1>Mondainai</h1>
    </a>
    <%= link_to "Save", new_item_path, class: "navbar-link text-end" %>
  </div>
  <%# Navbar %>
  <div>
    <h2 class="page-title">Post Item</h2>
    <%= simple_form_for(@item) do |f| %>
      <%= f.input :name, placeholder:"Name" %>
      <%= f.input :description, placeholder:"Add description" %>
      <%= f.input :photo, placeholder:"Add photo"%>
      <%= f.input :status %>
      <%= f.input :available_date, as: :date, html5: true %>
      <%= f.input :deadline_date, as: :date, html5: true %>
      <%= f.input :dimensions %>
      <%= f.input :weight %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
