<div class="container" >
  <%= render "shared/navbar-back-save" %>
  <div>
    <h2 class="page-title">Post Item</h2>
    <%= simple_form_for(@item) do |f| %>
      <%= f.input :name, placeholder:"Name" %>
      <%= f.input :description, placeholder:"Add description" %>
      <%= f.input :photo, placeholder:"Add photo"%>
      <%= f.input :status %>
      <%= f.input :available_date, as: :date, html5: true %>
      <%= f.input :deadline_date, as: :date, html5: true %>
      <%= f.input :dimensions %>
      <%= f.input :weight %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
