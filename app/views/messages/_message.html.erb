<div data-controller="set-sender" data-sender-id="<%= message.user.id %>">
  <div class="d-flex" data-set-sender-target="container">
    <div class="px-3 py-3 rounded-5" data-set-sender-target="bubble">
      <span> <%= message.content %></span>
    </div>
  </div>
  <div class="d-flex mb-2" data-set-sender-target="container" >
    <small class="text-secondary fw-light" > <%= message.created_at.strftime("%b %e, %l:%M %p") %> </small>
  </div>
</div>
