<div id="new_message">
  <%= simple_form_for [request, message], html: { class: "d-flex flex-row" } do |f| %>
    <%= f.text_field :content,
        class: "form-control rounded-3 bg-white flex-grow border-primary",
        placeholder: "Enter your message"
    %>
    <%= f.submit "Send", class: "btn btn-danger text-white rounded-3 ms-2" %>
  <% end %>
</div>
